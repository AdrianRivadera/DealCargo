---
import Header from "../components/Header.astro";


interface Props {
	description: string;
	title: string;
}

const { description , title } = Astro.props;
---

<!doctype html>
<html lang="en" class="!scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/IconoDealCargo.ico" />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #282828;
		background-size: 224px;
	}

	body{
		overflow-x: hidden;
	}

	p , li, span{
		color: rgba(255,255,255, 0.9);
		line-height: 1.4;
		margin-bottom: 1rem;
		font-size: 1em;
		letter-spacing: 0.5px;
	}

	h2,h3,h4,h5,p, span, img{

		animation: fade linear both;
		animation-timeline:view();
		animation-range:entry 50% cover 50%;

	}
	@keyframes fade {
		from {
			opacity: 0;
		}
		to{
			opacity: 1;
		}
		0%{
			opacity: 0;
		}
		40% {
			opacity: 1;
		}
		100%{
			opacity: 1;
		}
	}



	@keyframes reveal {
		from {
			background-position-x: 200%;
		}
		to{
			background-position-x: 0%;
		}
	}


	li{
		color: rgba(255,255,255, 0.9);
		line-height: 1.4;
		margin-bottom: .6em;
		font-size: 1em;
		letter-spacing: 0.5px;
	}

	p strong {
		
		font-weight: bold;
	}


	#header-nav {
        animation: blur linear both;
        animation-timeline: scroll();
        animation-range: 0 500px;
      }

      @keyframes blur {
        to {
          box-shadow:
            0px 5px 50px -5px rgba(0, 0, 0, 0.1),
            0px 0px 0 1px rgba(0, 0, 0, 0.3);
          background: rgba(0, 0, 0, 0.3);
          backdrop-filter: blur(10px);
        }
      }


	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}




	.floating {  
		animation-name: floating;
		animation-duration: 3s;
		animation-iteration-count: infinite;
		animation-timing-function: ease-in-out;
	}
 
	@keyframes floating {
		0% { transform: translate(0,  0px); }
		50%  { transform: translate(0, 15px); }
		100%   { transform: translate(0, -0px); }    
	}

	.decoration-underline{
		background: 
		linear-gradient(to right, rgb(255, 255, 255), rgb(255, 255, 255)),
		linear-gradient(to right, rgba(255, 0, 0, 1), rgba(255, 0, 0, 1), rgba(255, 0, 0, 1));
		background-size: 100% 0.1em, 0 0.1em;
		background-position: 100% 100%, 0 100%;
		background-repeat: no-repeat;
		transition: background-size 400ms;
	}

	.decoration-underline:hover,
	.decoration-underline:focus {
		background-size: 0 0.1em, 100% 0.1em;
	}
</style>
